{
  "name": "Item",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": true,
  "persistUndefinedAsNull": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "required": true,
      "defaultFn": "guid"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true
    },
    "personId": {
      "type": "string"
    },
    "tagIds": {
      "type": [
        "string"
      ]
    }
  },
  "validations": [],
  "relations": {
    "tags": {
      "type": "referencesMany",
      "model": "Tag",
      "property": "tagIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "person": {
      "type": "belongsTo",
      "model": "Person"
    }
  },
  "acls": [],
  "methods": []
}
