{
  "name": "Item",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": "throw",
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "required": true,
      "defaultFn": "guid"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "description": {
      "type": "string"
    },
    "personId": {
      "type": "string"
    },
    "tagIds": {
      "type": [
        "string"
      ]
    },
    "created": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "tags": {
      "type": "referencesMany",
      "model": "Tag",
      "property": "tagIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "person": {
      "type": "belongsTo",
      "model": "Person"
    }
  },
  "acls": [],
  "methods": {
    "export": {
      "description": "Export items",
      "isStatic": true,
      "accepts": {
        "arg": "res",
        "type": "object",
        "http": {
          "source": "res"
        }
      },
      "returns": {
        "arg": "result",
        "type": "string",
        "root": true
      },
      "http": {
        "path": "/export",
        "verb": "get"
      }
    }
  }
}
