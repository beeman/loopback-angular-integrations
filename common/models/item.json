{
  "name": "Item",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": "throw",
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "required": true,
      "defaultFn": "guid"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "new"
    },
    "description": {
      "type": "string"
    },
    "personId": {
      "type": "string"
    },
    "tagIds": {
      "type": [
        "string"
      ]
    },
    "created": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    },
    "archived": {
      "type": "boolean",
      "required": true,
      "default": false
    }
  },
  "mixins": {
    "Changed": {
      "properties": {
        "name": "changeName",
        "status": "changeStatus",
        "archived": "changeArchived"
      }
    },
    "Paginate": {
      "config": {
        "limit": "10"
      }
    }
  },
  "validations": [],
  "relations": {
    "tags": {
      "type": "referencesMany",
      "model": "Tag",
      "property": "tagIds",
      "options": {
        "validate": true,
        "forceId": false
      }
    },
    "person": {
      "type": "belongsTo",
      "model": "Person"
    }
  },
  "acls": [],
  "methods": {
    "export": {
      "description": "Export items",
      "isStatic": true,
      "accepts": [{
        "arg": "data",
        "type": "object",
        "required": false,
        "http": {
          "source": "body"
        }
      }],
      "returns": {
        "arg": "result",
        "type": "string",
        "root": true
      },
      "http": {
        "path": "/export",
        "verb": "post"
      }
    }
  }
}
